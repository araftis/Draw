<?xml version="1.0" encoding="utf-8" ?>
<inspector>
    <group title="Graphic">
        <group title="Position">
            <slice type="rect" valueKeyPath="controller.selection.frame" />
        </group>
        <group title="Text">
            <slice type="boolean" title="Active" valueKeyPath="controller.selection.primaryText.active" />
            <slice type="attributedString" label="Text" valueKeyPath="controller.selection.primaryText.attributedString" />
            <slice type="choice" style="segments" label="V. Alignment" valueType="integer" valueKeyPath="controller.selection.primaryText.verticalAlignment">
                <choice imageName="AJRInspectorAlignTop" bundle="com.ajr.framework.AJRInterface" value="0" />
                <choice imageName="AJRInspectorAlignMiddle" bundle="com.ajr.framework.AJRInterface" value="1" />
                <choice imageName="AJRInspectorAlignBottom" bundle="com.ajr.framework.AJRInterface" value="2" />
            </slice>
            <slice type="float" label="Padding" valueKeyPath="controller.selection.primaryText.lineFragmentPadding" />
        </group>
        <group title="Stroke">
            <slice type="boolean" title="Active" valueKeyPath="controller.selection.primaryStroke.active" />
            <slice type="color" label="Color" valueKeyPath="controller.selection.primaryStroke.color" />
            <slice type="float" label="Width" valueKeyPath="controller.selection.primaryStroke.width" />
            <slice type="float" label="Miter Limit" valueKeyPath="controller.selection.primaryStroke.miterLimit" />
        </group>
        <group title="Fill">
            <slice type="boolean" title="Active" valueKeyPath="controller.selection.primaryFill.active" />
            <slice type="color" label="Color" valueKeyPath="controller.selection.primaryFill.color" />
        </group>
        <group title="Shadow">
            <slice type="boolean" title="Active" valueKeyPath="controller.selection.primaryShadow.active" />
            <slice type="color" label="Color" valueKeyPath="controller.selection.primaryShadow.color" />
            <slice type="size" label="Offset" valuesCanLink="false" valueKeyPath="controller.selection.primaryShadow.offset" />
            <slice type="float" label="Blur Radius" valueKeyPath="controller.selection.primaryShadow.blurRadius" />
        </group>
    </group>
</inspector>
